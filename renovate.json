{
  "extends": [
    "config:base",
    ":timezone(Asia/Shanghai)",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    ":semanticCommitScope(deps)",
    ":disablePeerDependencies",
    "schedule:earlyMondays"
  ],
  "rangeStrategy": "bump",
  "packageRules": [{
      "groupName": "tiptap",
      "matchPackagePatterns": [
        "^@tiptap/"
      ]
    },
    {
      "groupName": "commitlint",
      "matchPackagePatterns": [
        "^@commitlint/"
      ]
    },
    {
      "groupName": "eslint",
      "matchPackageNames": [
        "eslint"
      ],
      "matchPackagePatterns": [
        "^@typescript-eslint/", "^@vue/eslint-", "^eslint-config-", "^eslint-plugin-", "^eslint-define-"
      ]
    },
    {
      "groupName": "semantic release",
      "matchPackagePatterns": [
        "^@semantic-release/", "^semantic-release"
      ]
    },
    {
      "groupName": "capacitor",
      "matchPackagePatterns": [
        "^@capacitor/"
      ]
    },
    {
      "groupName": "lodash",
      "matchPackagePatterns": [
        "^lodash", "^@types/lodash"
      ]
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "automergeStrategy": "squash"
    },
    {
      "matchDepTypes": [
        "engines"
      ],
      "enabled": false
    }
  ],
  "ignoreDeps": [
    "vue",
    "vue-router",
    "vue-template-compiler",
    "sass"
  ]
}
