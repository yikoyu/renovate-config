{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>yikoyu/renovate-config",
    ":enablePreCommit"
  ],
  "constraints": {
    "python": ">=3.10",
    "poetry": ">=1.3.0"
  },
  "pip-compile": {
    "fileMatch": ["(^|/)requirements(-.*)?\\.in$"]
  },
  "pip_requirements": {
    "enabled": false
  },
  "pip_setup": {
    "enabled": false
  },
  "poetry": {
    "fileMatch": [
      "(^|/)pyproject\\.toml$"
    ]
  },
  "ignoreDeps": [
    "python"
  ]
}